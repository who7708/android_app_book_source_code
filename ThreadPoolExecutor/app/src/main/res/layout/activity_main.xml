<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_thread_pool_executor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ThreadPoolExecutor"/>

    <Button
        android:id="@+id/btn_new_cached_thread_pool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="newCachedThreadPool"/>

    <Button
        android:id="@+id/btn_new_fixed_thread_pool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="newFixedThreadPool"/>

    <Button
        android:id="@+id/btn_new_single_thread_executor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="newSingleThreadExecutor"/>

    <Button
        android:id="@+id/btn_scheduled_thread_pool_executor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ScheduledThreadPoolExecutor"/>
</LinearLayout>
